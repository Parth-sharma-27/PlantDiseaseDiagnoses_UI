@{
    Layout = "_BlankLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khetsaathi - Your Farming Companion</title>
    <meta name="description" content="Khetsaathi provides farmers with real-time agricultural information, market prices, weather updates, and expert advice to maximize crop yields and profits.">

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">

    <style>
        /* Global Styles */
        :root {
            --primary-color: #2E7D32;
            --secondary-color: #4CAF50;
            --accent-color: #FF9800;
            --light-color: #F8F9FA;
            --dark-color: #212529;
            --text-color: #495057;
            --white: #FFFFFF;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.4s ease;
            --gradient: linear-gradient(135deg, #2E7D32, #4CAF50);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            line-height: 1.7;
            color: var(--text-color);
            background-color: var(--white);
            overflow-x: hidden;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .section-header {
            text-align: center;
            margin-bottom: 70px;
            position: relative;
        }

            .section-header h2 {
                font-family: 'Montserrat', sans-serif;
                font-size: 42px;
                font-weight: 800;
                color: var(--dark-color);
                margin-bottom: 20px;
                position: relative;
                display: inline-block;
            }

                .section-header h2::after {
                    content: '';
                    position: absolute;
                    width: 60%;
                    height: 4px;
                    background: var(--gradient);
                    bottom: -10px;
                    left: 20%;
                    border-radius: 2px;
                }

                .section-header h2 span {
                    color: var(--primary-color);
                }

            .section-header p {
                font-size: 18px;
                max-width: 700px;
                margin: 25px auto 0;
                color: var(--text-color);
            }

        .btn {
            display: inline-block;
            padding: 14px 32px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            position: relative;
            overflow: hidden;
            z-index: 1;
            font-family: 'Montserrat', sans-serif;
        }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.2);
                z-index: -1;
                transition: var(--transition);
                border-radius: 50px;
            }

            .btn:hover::before {
                opacity: 0;
            }

        .btn-primary {
            background: var(--gradient);
            color: var(--white);
            box-shadow: 0 5px 15px rgba(46, 125, 50, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(46, 125, 50, 0.4);
            }

        .btn-outline {
            background-color: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
        }

            .btn-outline:hover {
                background-color: var(--primary-color);
                color: var(--white);
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(46, 125, 50, 0.3);
            }

        /* Header Styles */
        header {
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: var(--transition);
        }

            header.scrolled {
                padding: 10px 0;
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            }

            header .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 15px 20px;
            }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .logo img {
                height: 50px;
            }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--primary-color);
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 24px;
        }

            .logo-container i {
                font-size: 28px;
                color: var(--accent-color);
            }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 35px;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--dark-color);
                font-weight: 500;
                transition: var(--transition);
                position: relative;
                font-family: 'Montserrat', sans-serif;
            }

                .nav-links a:hover {
                    color: var(--primary-color);
                }

                .nav-links a::after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 3px;
                    background: var(--gradient);
                    bottom: -8px;
                    left: 0;
                    transition: var(--transition);
                    border-radius: 2px;
                }

                .nav-links a:hover::after {
                    width: 100%;
                }

        .cta-buttons {
            display: flex;
            gap: 15px;
        }

        .mobile-menu-btn {
            display: none;
            font-size: 24px;
            cursor: pointer;
            color: var(--dark-color);
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1464226184884-fa280b87c399?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 120px 0 80px;
            margin-top: 80px;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 10% 20%, rgba(46, 125, 50, 0.3) 0%, transparent 50%);
                z-index: 1;
            }

            .hero .container {
                display: flex;
                align-items: center;
                justify-content: space-between;
                position: relative;
                z-index: 2;
            }

        .hero-content {
            flex: 1;
            max-width: 600px;
            color: var(--white);
            animation: fadeInUp 1s ease;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 56px;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 25px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

            .hero-title span {
                color: var(--accent-color);
                position: relative;
            }

                .hero-title span::after {
                    content: '';
                    position: absolute;
                    width: 100%;
                    height: 8px;
                    background: var(--accent-color);
                    bottom: 5px;
                    left: 0;
                    z-index: -1;
                    opacity: 0.4;
                    border-radius: 4px;
                }

        .hero-subtitle {
            font-size: 20px;
            margin-bottom: 35px;
            opacity: 0.9;
            font-weight: 300;
        }

        .hero-buttons {
            display: flex;
            gap: 20px;
            margin-bottom: 40px;
        }

        .app-download {
            display: flex;
            gap: 20px;
        }

            .app-download a {
                display: flex;
                align-items: center;
                gap: 12px;
                color: var(--white);
                background-color: rgba(255, 255, 255, 0.15);
                backdrop-filter: blur(10px);
                padding: 12px 24px;
                border-radius: 50px;
                text-decoration: none;
                transition: var(--transition);
                border: 1px solid rgba(255, 255, 255, 0.2);
            }

                .app-download a:hover {
                    background-color: rgba(255, 255, 255, 0.25);
                    transform: translateY(-5px);
                }

            .app-download i {
                font-size: 28px;
            }

        .hero-image {
            flex: 1;
            max-width: 500px;
            text-align: center;
            animation: float 5s ease-in-out infinite;
        }

        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .hero-image img {
            max-width: 100%;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            border: 5px solid rgba(255, 255, 255, 0.1);
        }

        /* Features Section */
        .features {
            padding: 120px 0;
            background-color: var(--light-color);
            position: relative;
        }

            .features::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 150px;
                background: var(--white);
                clip-path: polygon(0 0, 100% 0, 100% 100%, 0 70%);
                z-index: 1;
            }

            .features .container {
                position: relative;
                z-index: 2;
            }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .feature-card {
            background-color: var(--white);
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.02);
        }

            .feature-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: var(--gradient);
                transform: scaleX(0);
                transform-origin: left;
                transition: var(--transition);
            }

            .feature-card:hover::before {
                transform: scaleX(1);
            }

            .feature-card:hover {
                transform: translateY(-15px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        .feature-icon {
            width: 90px;
            height: 90px;
            background: var(--gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            position: relative;
            box-shadow: 0 10px 20px rgba(46, 125, 50, 0.2);
        }

            .feature-icon::after {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                border-radius: 50%;
                background: var(--gradient);
                z-index: -1;
                filter: blur(15px);
                opacity: 0.5;
            }

            .feature-icon i {
                font-size: 40px;
                color: var(--white);
            }

        .feature-card h3 {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            margin-bottom: 15px;
            color: var(--dark-color);
        }

        .feature-card p {
            color: var(--text-color);
            line-height: 1.8;
        }

        /* About Section */
        .about {
            padding: 120px 0;
            position: relative;
        }

            .about::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 150px;
                background: var(--light-color);
                clip-path: polygon(0 30%, 100% 0, 100% 100%, 0 100%);
                z-index: 1;
            }

        .about-content {
            display: flex;
            align-items: center;
            gap: 70px;
            position: relative;
            z-index: 2;
        }

        .about-text {
            flex: 1;
        }

            .about-text h2 {
                font-family: 'Montserrat', sans-serif;
                font-size: 40px;
                margin-bottom: 25px;
                color: var(--dark-color);
                position: relative;
            }

                .about-text h2 span {
                    color: var(--primary-color);
                }

            .about-text p {
                margin-bottom: 25px;
                color: var(--text-color);
                font-size: 17px;
            }

        .stats {
            display: flex;
            gap: 40px;
            margin-top: 40px;
        }

        .stat-item {
            text-align: center;
            background: var(--white);
            padding: 25px 20px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            flex: 1;
            transition: var(--transition);
        }

            .stat-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            }

            .stat-item h3 {
                font-family: 'Montserrat', sans-serif;
                font-size: 42px;
                color: var(--primary-color);
                margin-bottom: 10px;
                position: relative;
            }

                .stat-item h3::after {
                    content: '+';
                    position: absolute;
                    top: 0;
                    right: -15px;
                    font-size: 30px;
                    color: var(--accent-color);
                }

            .stat-item p {
                color: var(--text-color);
                font-weight: 500;
            }

        .about-image {
            flex: 1;
            position: relative;
        }

            .about-image img {
                width: 100%;
                border-radius: 20px;
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
                border: 5px solid var(--white);
            }

            .about-image::before {
                content: '';
                position: absolute;
                top: -20px;
                left: -20px;
                width: 100%;
                height: 100%;
                background: var(--gradient);
                border-radius: 20px;
                z-index: -1;
                opacity: 0.1;
            }

        /* Testimonials Section */
        .testimonials {
            padding: 120px 0;
            background-color: var(--light-color);
            position: relative;
        }

            .testimonials::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 150px;
                background: var(--white);
                clip-path: polygon(0 0, 100% 0, 100% 100%, 0 70%);
                z-index: 1;
            }

            .testimonials .container {
                position: relative;
                z-index: 2;
            }

        .testimonials-slider {
            position: relative;
            max-width: 900px;
            margin: 0 auto;
        }

        .testimonial-card {
            background-color: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
            position: relative;
            border-left: 5px solid var(--primary-color);
        }

        .testimonial-content {
            margin-bottom: 30px;
            position: relative;
        }

            .testimonial-content::before {
                content: '"';
                font-size: 120px;
                color: var(--primary-color);
                opacity: 0.1;
                position: absolute;
                top: -40px;
                left: -20px;
                font-family: 'Georgia', serif;
            }

            .testimonial-content p {
                font-style: italic;
                color: var(--text-color);
                line-height: 1.8;
                font-size: 18px;
            }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .testimonial-author img {
                width: 70px;
                height: 70px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid var(--primary-color);
            }

        .author-info h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            color: var(--dark-color);
        }

        .author-info p {
            color: var(--text-color);
            font-size: 16px;
        }

        .slider-controls {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

            .slider-controls button {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                background: var(--gradient);
                color: var(--white);
                border: none;
                cursor: pointer;
                transition: var(--transition);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 20px;
                box-shadow: 0 10px 20px rgba(46, 125, 50, 0.2);
            }

                .slider-controls button:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 15px 30px rgba(46, 125, 50, 0.3);
                }

        /* CTA Section */
        .cta {
            padding: 140px 0;
            background: linear-gradient(rgba(46, 125, 50, 0.9), rgba(76, 175, 80, 0.9)), url('https://images.unsplash.com/photo-1600486517927-9b3c1a5b7824?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .cta::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 80% 80%, rgba(255, 152, 0, 0.3) 0%, transparent 60%);
                z-index: 1;
            }

        .cta-content {
            max-width: 800px;
            margin: 0 auto;
            color: var(--white);
            position: relative;
            z-index: 2;
        }

            .cta-content h2 {
                font-family: 'Montserrat', sans-serif;
                font-size: 48px;
                margin-bottom: 25px;
                text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
            }

                .cta-content h2 span {
                    color: var(--accent-color);
                    position: relative;
                }

                    .cta-content h2 span::after {
                        content: '';
                        position: absolute;
                        width: 100%;
                        height: 8px;
                        background: var(--accent-color);
                        bottom: 5px;
                        left: 0;
                        z-index: -1;
                        opacity: 0.4;
                        border-radius: 4px;
                    }

            .cta-content p {
                font-size: 20px;
                margin-bottom: 40px;
                opacity: 0.9;
                font-weight: 300;
            }

        .cta-buttons {
            display: flex;
            justify-content: center;
            gap: 25px;
        }

        /* Contact Section */
        .contact {
            padding: 120px 0;
            position: relative;
        }

            .contact::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 150px;
                background: var(--light-color);
                clip-path: polygon(0 30%, 100% 0, 100% 100%, 0 100%);
                z-index: 1;
            }

        .contact-content {
            display: flex;
            gap: 70px;
            position: relative;
            z-index: 2;
        }

        .contact-info {
            flex: 1;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
            background: var(--white);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
        }

            .info-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            }

            .info-item i {
                font-size: 28px;
                color: var(--primary-color);
                margin-top: 5px;
                background: rgba(46, 125, 50, 0.1);
                width: 60px;
                height: 60px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .info-item h4 {
                font-family: 'Montserrat', sans-serif;
                font-size: 20px;
                margin-bottom: 8px;
                color: var(--dark-color);
            }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 40px;
        }

            .social-links a {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background: var(--gradient);
                color: var(--white);
                display: flex;
                align-items: center;
                justify-content: center;
                transition: var(--transition);
                font-size: 20px;
                box-shadow: 0 10px 20px rgba(46, 125, 50, 0.2);
            }

                .social-links a:hover {
                    background: var(--dark-color);
                    transform: translateY(-8px);
                    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
                }

        .contact-form {
            flex: 1;
            background: var(--white);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.05);
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 18px;
                border: 2px solid rgba(0, 0, 0, 0.05);
                border-radius: 10px;
                font-family: 'Poppins', sans-serif;
                font-size: 16px;
                transition: var(--transition);
                background: var(--light-color);
            }

                .form-group input:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    background: var(--white);
                    box-shadow: 0 0 0 5px rgba(46, 125, 50, 0.1);
                }

        /* Footer */
        footer {
            background-color: var(--dark-color);
            color: var(--white);
            padding: 80px 0 30px;
            position: relative;
            overflow: hidden;
        }

            footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 10% 90%, rgba(76, 175, 80, 0.2) 0%, transparent 60%);
                z-index: 1;
            }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 50px;
            margin-bottom: 60px;
            position: relative;
            z-index: 2;
        }

        .footer-logo {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .footer-logo .logo-container {
                margin-bottom: 20px;
                color: var(--white);
            }

            .footer-logo p {
                opacity: 0.8;
                line-height: 1.8;
                margin-bottom: 25px;
            }

        .footer-links h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 12px;
            color: var(--white);
        }

            .footer-links h4::after {
                content: '';
                position: absolute;
                width: 50px;
                height: 3px;
                background: var(--gradient);
                bottom: 0;
                left: 0;
                border-radius: 2px;
            }

        .footer-links ul {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
