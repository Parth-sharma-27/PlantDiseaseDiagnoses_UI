@{
    Layout = "_DashboardLayout";
}

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    
    <style>
        /* Global Styles */
        :root {
            --primary-color: #2E7D32;
            --secondary-color: #4CAF50;
            --accent-color: #FF9800;
            --light-color: #F8F9FA;
            --dark-color: #212529;
            --text-color: #495057;
            --white: #FFFFFF;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.4s ease;
            --gradient: linear-gradient(135deg, #2E7D32, #4CAF50);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            line-height: 1.7;
            color: var(--text-color);
            background-color: var(--light-color);
            overflow-x: hidden;
        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Header Styles */
        header {
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: var(--transition);
        }
        
        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }
        
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--primary-color);
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 24px;
        }
        
        .logo-container i {
            font-size: 28px;
            color: var(--accent-color);
        }
        
        .back-link {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .back-link:hover {
            color: var(--secondary-color);
        }
        
        /* Field Diary Section */
        .diary-section {
            padding: 120px 0 80px;
            background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://images.unsplash.com/photo-1523741545313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }
        
        .section-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 36px;
            color: var(--dark-color);
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }
        
        .section-header h2::after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: var(--gradient);
            bottom: -10px;
            left: 20%;
            border-radius: 2px;
        }
        
        .section-header h2 span {
            color: var(--primary-color);
        }
        
        .section-header p {
            font-size: 18px;
            max-width: 700px;
            margin: 25px auto 0;
            color: var(--text-color);
        }
        
        /* Diary Controls */
        .diary-controls {
            background: var(--white);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .diary-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .diary-title i {
            color: var(--primary-color);
        }
        
        .diary-actions {
            display: flex;
            gap: 15px;
        }
        
        .diary-btn {
            padding: 10px 20px;
            background: var(--gradient);
            color: var(--white);
            border: none;
            border-radius: 30px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .diary-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 125, 50, 0.3);
        }
        
        .diary-btn-outline {
            padding: 10px 20px;
            background: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            border-radius: 30px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .diary-btn-outline:hover {
            background: rgba(46, 125, 50, 0.1);
            transform: translateY(-3px);
        }
        
        /* Diary Entries */
        .diary-entries {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }
        
        .diary-entry {
            background: var(--white);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            position: relative;
        }
        
        .diary-entry:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }
        
        .diary-entry-header {
            background: var(--gradient);
            color: var(--white);
            padding: 15px 20px;
            position: relative;
        }
        
        .diary-entry-date {
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            font-weight: 600;
        }
        
        .diary-entry-day {
            font-size: 14px;
            opacity: 0.9;
        }
        
        .diary-entry-body {
            padding: 20px;
        }
        
        .diary-entry-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            color: var(--dark-color);
            margin-bottom: 15px;
        }
        
        .diary-entry-content {
            color: var(--text-color);
            margin-bottom: 20px;
            line-height: 1.6;
        }
        
        .diary-entry-images {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            overflow-x: auto;
            padding-bottom: 5px;
        }
        
        .diary-entry-image {
            width: 80px;
            height: 80px;
            border-radius: 10px;
            object-fit: cover;
            flex-shrink: 0;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .diary-entry-image:hover {
            transform: scale(1.05);
        }
        
        .diary-entry-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .diary-entry-crop {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 14px;
            color: var(--text-color);
        }
        
        .diary-entry-crop i {
            color: var(--primary-color);
        }
        
        .diary-entry-actions {
            display: flex;
            gap: 10px;
        }
        
        .diary-entry-action {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: rgba(46, 125, 50, 0.1);
            color: var(--primary-color);
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .diary-entry-action:hover {
            background: rgba(46, 125, 50, 0.2);
        }
        
        /* Add Entry Button */
        .add-entry-container {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
        }
        
        .add-entry-btn {
            padding: 15px 30px;
            background: var(--gradient);
            color: var(--white);
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 10px 30px rgba(46, 125, 50, 0.2);
        }
        
        .add-entry-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(46, 125, 50, 0.3);
        }
        
        /* Entry Form Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 2000;
            overflow-y: auto;
        }
        
        .modal-content {
            background: var(--white);
            margin: 50px auto;
            max-width: 800px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: modalFadeIn 0.5s ease;
        }
        
        @@keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .modal-header {
            background: var(--gradient);
            color: var(--white);
            padding: 20px 30px;
            position: relative;
        }
        
        .modal-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            font-weight: 600;
        }
        
        .modal-close {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            font-size: 18px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }
        
        .modal-body {
            padding: 30px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 15px;
            border: 2px solid rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            transition: var(--transition);
            background: var(--light-color);
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            background: var(--white);
            box-shadow: 0 0 0 5px rgba(46, 125, 50, 0.1);
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .image-upload {
            border: 2px dashed rgba(46, 125, 50, 0.3);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            margin-bottom: 20px;
        }
        
        .image-upload:hover {
            border-color: var(--primary-color);
            background: rgba(46, 125, 50, 0.05);
        }
        
        .image-upload-icon {
            font-size: 36px;
            color: var(--primary-color);
            margin-bottom: 10px;
        }
        
        .image-upload-text {
            color: var(--text-color);
            margin-bottom: 5px;
        }
        
        .image-upload-subtext {
            font-size: 14px;
            color: var(--text-color);
            opacity: 0.7;
        }
        
        #imageInput {
            display: none;
        }
        
        .image-preview {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            flex-wrap: wrap;
        }
        
        .preview-image {
            width: 80px;
            height: 80px;
            border-radius: 10px;
            object-fit: cover;
            position: relative;
        }
        
        .preview-image-remove {
            position: absolute;
            top: -8px;
            right: -8px;
            width: 24px;
            height: 24px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #F44336;
            font-size: 12px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }
        
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            justify-content: flex-end;
        }
        
        .form-btn {
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            font-family: 'Montserrat', sans-serif;
        }
        
        .form-btn-primary {
            background: var(--gradient);
            color: var(--white);
            border: none;
        }
        
        .form-btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 125, 50, 0.4);
        }
        
        .form-btn-secondary {
            background: transparent;
            color: var(--text-color);
            border: none;
        }
        
        .form-btn-secondary:hover {
            color: var(--dark-color);
        }
        
        /* Filter Section */
        .filter-section {
            background: var(--white);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }
        
        .filter-header {
            font-family: 'Montserrat', sans-serif;
            font-size: 22px;
            color: var(--dark-color);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .filter-header i {
            color: var(--primary-color);
        }
        
        .filter-options {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .filter-option {
            padding: 8px 16px;
            background: rgba(46, 125, 50, 0.1);
            color: var(--primary-color);
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .filter-option:hover,
        .filter-option.active {
            background: var(--primary-color);
            color: var(--white);
        }
        
        /* Stats Section */
        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: var(--white);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            text-align: center;
            transition: var(--transition);
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: rgba(46, 125, 50, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: var(--primary-color);
            margin: 0 auto 15px;
        }
        
        .stat-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 5px;
        }
        
        .stat-label {
            font-size: 16px;
            color: var(--text-color);
        }
        
        /* Footer */
        footer {
            background-color: var(--dark-color);
            color: var(--white);
            padding: 70px 0 20px;
            position: relative;
            overflow: hidden;
        }
        
        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 10% 90%, rgba(76, 175, 80, 0.2) 0%, transparent 60%);
            z-index: 1;
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 50px;
            position: relative;
            z-index: 2;
        }
        
        .footer-logo {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        
        .footer-logo .logo-container {
            margin-bottom: 20px;
            color: var(--white);
        }
        
        .footer-logo p {
            opacity: 0.8;
            line-height: 1.8;
            margin-bottom: 25px;
        }
        
        .footer-links h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 12px;
            color: var(--white);
        }
        
        .footer-links h4::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background: var(--gradient);
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }
        
        .footer-links ul {
            list-style: none;
        }
        
        .footer-links li {
            margin-bottom: 12px;
        }
        
        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: var(--transition);
            display: inline-block;
            position: relative;
        }
        
        .footer-links a::before {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: var(--accent-color);
            bottom: -2px;
            left: 0;
            transition: var(--transition);
        }
        
        .footer-links a:hover {
            color: var(--white);
            padding-left: 5px;
        }
        
        .footer-links a:hover::before {
            width: 100%;
        }
        
        .footer-bottom {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 16px;
            opacity: 0.7;
            position: relative;
            z-index: 2;
        }
        
        /* Responsive Styles */
        @@media (max-width: 992px) {
            .diary-entries {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
            
            .stats-section {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }
        
        @@media (max-width: 768px) {
            .diary-controls {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .diary-actions {
                margin-top: 15px;
                width: 100%;
                justify-content: flex-start;
            }
            
            .section-header h2 {
                font-size: 30px;
            }
            
            .filter-options {
                justify-content: flex-start;
            }
        }
        
        @@media (max-width: 576px) {
            .section-header h2 {
                font-size: 26px;
            }
            
            .diary-entries {
                grid-template-columns: 1fr;
            }
            
            .stats-section {
                grid-template-columns: 1fr;
            }
            
            .modal-content {
                margin: 20px;
                border-radius: 15px;
            }
            
            .modal-header {
                padding: 15px 20px;
            }
            
            .modal-title {
                font-size: 20px;
            }
            
            .modal-body {
                padding: 20px;
            }
            
            .form-actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>

  
    
