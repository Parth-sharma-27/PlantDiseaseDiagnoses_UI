                            <option value="vegetables">Vegetables</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="entryActivity">Activity Type</label>
                        <select id="entryActivity" required>
                            <option value="">Select Activity</option>
                            <option value="sowing">Sowing/Planting</option>
                            <option value="irrigation">Irrigation</option>
                            <option value="fertilizer">Fertilizer Application</option>
                            <option value="pest-control">Pest Control</option>
                            <option value="weeding">Weeding</option>
                            <option value="monitoring">Growth Monitoring</option>
                            <option value="harvesting">Harvesting</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="entryDescription">Description</label>
                        <textarea id="entryDescription" placeholder="Describe the activity, observations, and results" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label>Upload Images</label>
                        <div class="image-upload" id="imageUpload">
                            <i class="fas fa-cloud-upload-alt image-upload-icon"></i>
                            <p class="image-upload-text">Click to upload images</p>
                            <p class="image-upload-subtext">JPG, PNG up to 5MB each</p>
                            <input type="file" id="imageInput" multiple accept="image/*">
                        </div>
                        <div class="image-preview" id="imagePreview"></div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="button" class="form-btn form-btn-secondary" id="cancelBtn">Cancel</button>
                        <button type="submit" class="form-btn form-btn-primary">Save Entry</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modal functionality
            const addEntryBtn = document.getElementById('addEntryBtn');
            const entryModal = document.getElementById('entryModal');
            const modalClose = document.getElementById('modalClose');
            const cancelBtn = document.getElementById('cancelBtn');
            const entryForm = document.getElementById('entryForm');
            const imageUpload = document.getElementById('imageUpload');
            const imageInput = document.getElementById('imageInput');
            const imagePreview = document.getElementById('imagePreview');
            
            // Open modal
            addEntryBtn.addEventListener('click', function() {
                entryModal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            });
            
            // Close modal
            modalClose.addEventListener('click', closeModal);
            cancelBtn.addEventListener('click', closeModal);
            
            function closeModal() {
                entryModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                entryForm.reset();
                imagePreview.innerHTML = '';
            }
            
            // Close modal when clicking outside
            window.addEventListener('click', function(event) {
                if (event.target === entryModal) {
                    closeModal();
                }
            });
            
            // Image upload
            imageUpload.addEventListener('click', function() {
                imageInput.click();
            });
            
            imageInput.addEventListener('change', function() {
                const files = this.files;
                imagePreview.innerHTML = '';
                
                if (files.length > 0) {
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            
                            reader.onload = function(e) {
                                const imageElement = document.createElement('div');
                                imageElement.className = 'preview-image';
                                imageElement.innerHTML = `
                                    <img src="${e.target.result}" alt="Preview">
                                    <div class="preview-image-remove">
                                        <i class="fas fa-times"></i>
                                    </div>
                                `;
                                
                                // Add remove functionality
                                const removeBtn = imageElement.querySelector('.preview-image-remove');
                                removeBtn.addEventListener('click', function() {
                                    imageElement.remove();
                                });
                                
                                imagePreview.appendChild(imageElement);
                            }
                            
                            reader.readAsDataURL(file);
                        }
                    }
                }
            });
            
            // Form submission
            entryForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Get form values
                const date = document.getElementById('entryDate').value;
                const title = document.getElementById('entryTitle').value;
                const crop = document.getElementById('entryCrop').value;
                const activity = document.getElementById('entryActivity').value;
                const description = document.getElementById('entryDescription').value;
                
                // Create new entry element
                const newEntry = document.createElement('div');
                newEntry.className = 'diary-entry';
                newEntry.setAttribute('data-crop', crop);
                
                // Get day of week
                const entryDate = new Date(date);
                const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                const dayName = days[entryDate.getDay()];
                
                newEntry.innerHTML = `
                    <div class="diary-entry-header">
                        <div class="diary-entry-date">${date}</div>
                        <div class="diary-entry-day">${dayName}</div>
                    </div>
                    <div class="diary-entry-body">
                        <h4 class="diary-entry-title">${title}</h4>
                        <p class="diary-entry-content">${description}</p>
                        <div class="diary-entry-images">
                            ${imagePreview.innerHTML}
                        </div>
                        <div class="diary-entry-footer">
                            <div class="diary-entry-crop">
                                <i class="fas fa-seedling"></i> ${crop.charAt(0).toUpperCase() + crop.slice(1)}
                            </div>
                            <div class="diary-entry-actions">
                                <button class="diary-entry-action">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="diary-entry-action">
                                    <i class="fas fa-share"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                
                // Add to entries container
                const diaryEntries = document.getElementById('diaryEntries');
                diaryEntries.insertBefore(newEntry, diaryEntries.firstChild);
                
                // Close modal
                closeModal();
                
                // Show success message
                const successMessage = document.createElement('div');
                successMessage.className = 'success-message';
                successMessage.textContent = 'Diary entry added successfully!';
                successMessage.style.padding = '15px';
                successMessage.style.backgroundColor = 'rgba(76, 175, 80, 0.1)';
                successMessage.style.color = 'var(--primary-color)';
                successMessage.style.borderRadius = '10px';
                successMessage.style.marginTop = '20px';
                successMessage.style.textAlign = 'center';
                
                document.querySelector('.add-entry-container').appendChild(successMessage);
                
                // Remove success message after 3 seconds
                setTimeout(() => {
                    successMessage.remove();
                }, 3000);
                
                // Scroll to new entry
                newEntry.scrollIntoView({ behavior: 'smooth' });
            });
            
            // Filter functionality
            const filterOptions = document.querySelectorAll('.filter-option');
            const diaryEntriesAll = document.querySelectorAll('.diary-entry');
            
            filterOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    filterOptions.forEach(opt => opt.classList.remove('active'));
                    
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    // Get selected crop
                    const selectedCrop = this.textContent.toLowerCase();
                    
                    // Show/hide entries based on filter
                    diaryEntriesAll.forEach(entry => {
                        if (selectedCrop === 'all crops' || entry.getAttribute('data-crop') === selectedCrop) {
                            entry.style.display = 'block';
                        } else {
                            entry.style.display = 'none';
                        }
                    });
                });
            });
            
            // Entry action buttons
            const actionButtons = document.querySelectorAll('.diary-entry-action');
            
            actionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const icon = this.querySelector('i');
                    
                    if (icon.classList.contains('fa-edit')) {
                        alert('Edit functionality would be implemented here. This would allow farmers to modify their diary entries.');
                    } else if (icon.classList.contains('fa-share')) {
                        alert('Share functionality would be implemented here. This would allow farmers to share their diary entries with other farmers or experts.');
                    }
                });
            });
            
            // Header scroll effect
            window.addEventListener('scroll', function() {
                const header = document.querySelector('header');
                
                if (window.scrollY > 100) {
                    header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.1)';
                } else {
                    header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.05)';
                }
            });
        });
    </script>
