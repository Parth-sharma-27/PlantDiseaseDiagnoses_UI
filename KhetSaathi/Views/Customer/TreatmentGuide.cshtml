                if (event.target === modal) {
                    modal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Dosage calculator form
            const dosageForm = document.getElementById('dosageForm');
            const resultContainer = document.getElementById('resultContainer');
            
            dosageForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Get form values
                const area = parseFloat(document.getElementById('area').value);
                const dilution = document.getElementById('dilution').value;
                const concentration = parseFloat(document.getElementById('concentration').value);
                const water = parseFloat(document.getElementById('water').value) || 0;
                
                // Parse dilution ratio (e.g., "1:100" means 1 part product to 100 parts water)
                const dilutionParts = dilution.split(':');
                const productRatio = parseFloat(dilutionParts[0]);
                const waterRatio = parseFloat(dilutionParts[1]);
                
                // Calculate required amounts
                const totalWaterNeeded = area * 200; // Assuming 200 liters per acre
                const productNeeded = (totalWaterNeeded / waterRatio) * productRatio;
                
                // If water is specified, adjust calculations
                const actualWater = water > 0 ? water : totalWaterNeeded;
                const actualProduct = (actualWater / waterRatio) * productRatio;
                const totalSolution = actualProduct + actualWater;
                
                // Display results
                document.getElementById('productRequired').textContent = actualProduct.toFixed(2) + ' ml';
                document.getElementById('waterRequired').textContent = actualWater.toFixed(2) + ' L';
                document.getElementById('totalSolution').textContent = totalSolution.toFixed(2) + ' L';
                document.getElementById('coverage').textContent = area + ' acres';
                
                // Show result container
                resultContainer.style.display = 'block';
                
                // Scroll to results
                resultContainer.scrollIntoView({ behavior: 'smooth' });
            });
            
            // Search functionality
            const searchInput = document.querySelector('.search-input');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                
                remedyCards.forEach(card => {
                    const title = card.querySelector('.remedy-title').textContent.toLowerCase();
                    const description = card.querySelector('.remedy-description').textContent.toLowerCase();
                    
                    if (title.includes(searchTerm) || description.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
            
            // Header scroll effect
