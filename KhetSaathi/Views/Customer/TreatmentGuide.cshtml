@{
    Layout = "_DashboardLayout";
}
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    
    <style>
        /* Global Styles */
        :root {
            --primary-color: #2E7D32;
            --secondary-color: #4CAF50;
            --accent-color: #FF9800;
            --light-color: #F8F9FA;
            --dark-color: #212529;
            --text-color: #495057;
            --white: #FFFFFF;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.4s ease;
            --gradient: linear-gradient(135deg, #2E7D32, #4CAF50);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            line-height: 1.7;
            color: var(--text-color);
            background-color: var(--light-color);
            overflow-x: hidden;
        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Header Styles */
        header {
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: var(--transition);
        }
        
        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }
        
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--primary-color);
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 24px;
        }
        
        .logo-container i {
            font-size: 28px;
            color: var(--accent-color);
        }
        
        .back-link {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .back-link:hover {
            color: var(--secondary-color);
        }
        
        /* Remedy Guide Section */
        .remedy-section {
            padding: 120px 0 80px;
           /*  margin-top: 80px; */
            background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://images.unsplash.com/photo-1605000797499-95a51c5269ae?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }
        
        .section-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 36px;
            color: var(--dark-color);
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }
        
        .section-header h2::after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: var(--gradient);
            bottom: -10px;
            left: 20%;
            border-radius: 2px;
        }
        
        .section-header h2 span {
            color: var(--primary-color);
        }
        
        .section-header p {
            font-size: 18px;
            max-width: 700px;
            margin: 25px auto 0;
            color: var(--text-color);
        }
        
        /* Tabs */
        .tabs-container {
            max-width: 900px;
            margin: 0 auto 40px;
        }
        
        .tabs {
            display: flex;
            border-bottom: 2px solid rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }
        
        .tab {
            padding: 15px 30px;
            font-weight: 600;
            color: var(--text-color);
            cursor: pointer;
            position: relative;
            transition: var(--transition);
            font-family: 'Montserrat', sans-serif;
        }
        
        .tab:hover {
            color: var(--primary-color);
        }
        
        .tab.active {
            color: var(--primary-color);
        }
        
        .tab.active::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 3px;
            background: var(--gradient);
            bottom: -2px;
            left: 0;
            border-radius: 2px;
        }
        
        .tab-content {
            display: none;
            animation: fadeIn 0.5s ease;
        }
        
        .tab-content.active {
            display: block;
        }
        
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Remedy Guide */
        .search-container {
            margin-bottom: 30px;
        }
        
        .search-box {
            position: relative;
            max-width: 500px;
            margin: 0 auto;
        }
        
        .search-input {
            width: 100%;
            padding: 15px 50px 15px 20px;
            border: 2px solid rgba(0, 0, 0, 0.1);
            border-radius: 50px;
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            transition: var(--transition);
        }
        
        .search-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 5px rgba(46, 125, 50, 0.1);
        }
        
        .search-btn {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--primary-color);
            font-size: 18px;
            cursor: pointer;
        }
        
        .remedy-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }
        
        .remedy-card {
            background: var(--white);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            cursor: pointer;
        }
        
        .remedy-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        
        .remedy-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
        
        .remedy-content {
            padding: 20px;
        }
        
        .remedy-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            color: var(--dark-color);
            margin-bottom: 10px;
        }
        
        .remedy-description {
            color: var(--text-color);
            font-size: 14px;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .remedy-tag {
            display: inline-block;
            padding: 5px 12px;
            background: rgba(46, 125, 50, 0.1);
            color: var(--primary-color);
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }
        
        /* Dosage Calculator */
        .calculator-container {
            background: var(--white);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            max-width: 800px;
            margin: 0 auto;
        }
        
        .calculator-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            color: var(--dark-color);
            margin-bottom: 25px;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-row {
            display: flex;
            gap: 20px;
        }
        
        .form-row .form-group {
            flex: 1;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 15px;
            border: 2px solid rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            transition: var(--transition);
            background: var(--light-color);
        }
        
        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: var(--primary-color);
            background: var(--white);
            box-shadow: 0 0 0 5px rgba(46, 125, 50, 0.1);
        }
        
        .calculate-btn {
            display: block;
            width: 100%;
            max-width: 300px;
            margin: 30px auto 0;
            padding: 15px;
            background: var(--gradient);
            color: var(--white);
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            font-family: 'Montserrat', sans-serif);
        }
        
        .calculate-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 125, 50, 0.4);
        }
        
        .result-container {
            margin-top: 40px;
            padding: 25px;
            background: rgba(46, 125, 50, 0.05);
            border-radius: 15px;
            border-left: 5px solid var(--primary-color);
            display: none;
        }
        
        .result-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            color: var(--dark-color);
            margin-bottom: 15px;
        }
        
        .result-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .result-item:last-child {
            border-bottom: none;
        }
        
        .result-label {
            font-weight: 500;
            color: var(--text-color);
        }
        
        .result-value {
            font-weight: 600;
            color: var(--primary-color);
        }
        
        .safety-note {
            margin-top: 20px;
            padding: 15px;
            background: rgba(255, 152, 0, 0.1);
            border-radius: 10px;
            border-left: 3px solid var(--accent-color);
        }
        
        .safety-note h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: var(--dark-color);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .safety-note p {
            color: var(--text-color);
            font-size: 14px;
        }
        
        /* Remedy Detail Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 2000;
            overflow-y: auto;
        }
        
        .modal-content {
            background: var(--white);
            margin: 50px auto;
            max-width: 800px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: modalFadeIn 0.5s ease;
        }
        
        @@keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .modal-header {
            position: relative;
            height: 250px;
            overflow: hidden;
        }
        
        .modal-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .modal-close {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--dark-color);
            font-size: 18px;
            cursor: pointer;
            transition: var(--transition);
            z-index: 2;
        }
        
        .modal-close:hover {
            background: var(--white);
            transform: rotate(90deg);
        }
        
        .modal-body {
            padding: 30px;
        }
        
        .modal-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 28px;
            color: var(--dark-color);
            margin-bottom: 15px;
        }
        
        .modal-description {
            color: var(--text-color);
            line-height: 1.8;
            margin-bottom: 25px;
        }
        
        .info-section {
            margin-bottom: 25px;
        }
        
        .info-section h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            color: var(--dark-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .info-section h4 i {
            color: var(--primary-color);
        }
        
        .info-section ul {
            list-style: none;
            padding-left: 30px;
        }
        
        .info-section li {
            margin-bottom: 10px;
            position: relative;
        }
        
        .info-section li::before {
            content: '\f00c';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            left: -20px;
            top: 0;
            color: var(--secondary-color);
        }
        
        .precaution-box {
            background: rgba(244, 67, 54, 0.1);
            border-left: 4px solid #F44336;
            padding: 15px;
            border-radius: 10px;
            margin-top: 20px;
        }
        
        .precaution-box h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: #F44336;
            margin-bottom: 10px;
        }
        
        .precaution-box p {
            color: var(--text-color);
            font-size: 14px;
        }
        
        /* Footer */
        footer {
            background-color: var(--dark-color);
            color: var(--white);
            padding: 70px 0 20px;
            position: relative;
            overflow: hidden;
        }
        
        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 10% 90%, rgba(76, 175, 80, 0.2) 0%, transparent 60%);
            z-index: 1;
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 50px;
            position: relative;
            z-index: 2;
        }
        
        .footer-logo {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        
        .footer-logo .logo-container {
            margin-bottom: 20px;
            color: var(--white);
        }
        
        .footer-logo p {
            opacity: 0.8;
            line-height: 1.8;
            margin-bottom: 25px;
        }
        
        .footer-links h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 12px;
            color: var(--white);
        }
        
        .footer-links h4::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background: var(--gradient);
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }
        
        .footer-links ul {
            list-style: none;
        }
        
        .footer-links li {
            margin-bottom: 12px;
        }
        
        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: var(--transition);
            display: inline-block;
            position: relative;
        }
        
        .footer-links a::before {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: var(--accent-color);
            bottom: -2px;
            left: 0;
            transition: var(--transition);
        }
        
        .footer-links a:hover {
            color: var(--white);
            padding-left: 5px;
        }
        
        .footer-links a:hover::before {
            width: 100%;
        }
        
        .footer-bottom {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 16px;
            opacity: 0.7;
            position: relative;
            z-index: 2;
        }
        
        /* Responsive Styles */
        @@media (max-width: 992px) {
            .remedy-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }
        
        @@media (max-width: 768px) {
            .tabs {
                flex-wrap: wrap;
            }
            
            .tab {
                padding: 10px 15px;
                font-size: 14px;
            }
            
            .form-row {
                flex-direction: column;
                gap: 0;
            }
            
            .section-header h2 {
                font-size: 30px;
            }
            
            .modal-content {
                margin: 20px;
            }
        }
        
        @@media (max-width: 576px) {
            .section-header h2 {
                font-size: 26px;
            }
            
            .remedy-grid {
                grid-template-columns: 1fr;
            }
            
            .calculator-container {
                padding: 20px;
            }
            
            .modal-body {
                padding: 20px;
            }
            
            .modal-title {
                font-size: 22px;
            }
        }
    </style>


    <!-- Remedy Guide Section -->
    <section class="remedy-section pt-0">
        <div class="container">
            <div class="section-header">
                <h2>Remedy Guide & <span>Dosage Calculator</span></h2>
                <p>Find effective remedies for plant diseases and calculate the correct dosage of treatments for your farm</p>
            </div>
            
            <div class="tabs-container">
                <div class="tabs">
                    <div class="tab active" data-tab="remedy-guide">Remedy Guide</div>
                    <div class="tab" data-tab="dosage-calculator">Dosage Calculator</div>
                </div>
                
                <!-- Remedy Guide Tab -->
                <div class="tab-content active" id="remedy-guide">
                    <div class="search-container">
                        <div class="search-box">
                            <input type="text" class="search-input" placeholder="Search for diseases, pests, or remedies...">
                            <button class="search-btn"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    
                    <div class="remedy-grid">
                        <div class="remedy-card" data-remedy="leaf-blight">
                            <img src="https://images.unsplash.com/photo-1605231608423-34d9a4fddf1b?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Leaf Blight" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Leaf Blight</h3>
                                <p class="remedy-description">Fungal disease causing brown spots on leaves, leading to reduced photosynthesis and yield.</p>
                                <span class="remedy-tag">Fungal Disease</span>
                            </div>
                        </div>
                        
                        <div class="remedy-card" data-remedy="powdery-mildew">
                            <img src="https://images.unsplash.com/photo-1596591606878-8a421935c9dc?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Powdery Mildew" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Powdery Mildew</h3>
                                <p class="remedy-description">White powdery coating on leaves, stems, and flowers, affecting plant growth and yield.</p>
                                <span class="remedy-tag">Fungal Disease</span>
                            </div>
                        </div>
                        
                        <div class="remedy-card" data-remedy="aphids">
                            <img src="https://images.unsplash.com/photo-1543286386-713bdd548da4?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Aphids" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Aphid Infestation</h3>
                                <p class="remedy-description">Small insects sucking sap from plants, causing yellowing leaves and stunted growth.</p>
                                <span class="remedy-tag">Insect Pest</span>
                            </div>
                        </div>
                        
                        <div class="remedy-card" data-remedy="nutrient-deficiency">
                            <img src="https://images.unsplash.com/photo-1620712943543-bcc4688e7485?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Nutrient Deficiency" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Nutrient Deficiency</h3>
                                <p class="remedy-description">Yellowing or discoloration of leaves due to lack of essential nutrients like nitrogen, phosphorus, or potassium.</p>
                                <span class="remedy-tag">Nutritional Issue</span>
                            </div>
                        </div>
                        
                        <div class="remedy-card" data-remedy="leaf-spot">
                            <img src="https://images.unsplash.com/photo-1605000797499-95a51c5269ae?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Leaf Spot" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Leaf Spot Disease</h3>
                                <p class="remedy-description">Circular spots on leaves caused by fungal or bacterial pathogens, leading to premature leaf drop.</p>
                                <span class="remedy-tag">Fungal/Bacterial</span>
                            </div>
                        </div>
                        
                        <div class="remedy-card" data-remedy="root-rot">
                            <img src="https://images.unsplash.com/photo-1596591606878-8a421935c9dc?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Root Rot" class="remedy-image">
                            <div class="remedy-content">
                                <h3 class="remedy-title">Root Rot</h3>
                                <p class="remedy-description">Decay of plant roots due to fungal infection, often caused by overwatering or poorly drained soil.</p>
                                <span class="remedy-tag">Fungal Disease</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Dosage Calculator Tab -->
                <div class="tab-content" id="dosage-calculator">
                    <div class="calculator-container">
                        <h3 class="calculator-title">Treatment Dosage Calculator</h3>
                        
                        <form id="dosageForm">
                            <div class="form-group">
                                <label for="treatmentType">Treatment Type</label>
                                <select id="treatmentType" required>
                                    <option value="">Select Treatment</option>
                                    <option value="fungicide">Fungicide</option>
                                    <option value="insecticide">Insecticide</option>
                                    <option value="fertilizer">Fertilizer</option>
                                    <option value="herbicide">Herbicide</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="product">Product Name</label>
                                <select id="product" required>
                                    <option value="">Select Product</option>
                                    <option value="chlorothalonil">Chlorothalonil (Fungicide)</option>
                                    <option value="mancozeb">Mancozeb (Fungicide)</option>
                                    <option value="imidacloprid">Imidacloprid (Insecticide)</option>
                                    <option value="diazinon">Diazinon (Insecticide)</option>
