            // Check if online/offline
            function updateConnectionStatus() {
                if (navigator.onLine) {
                    connectionIcon.className = 'connection-icon online';
                    connectionIcon.innerHTML = '<i class="fas fa-wifi"></i>';
                    connectionTitle.textContent = 'You\'re Online';
                    connectionDescription.textContent = 'All features are available with full functionality.';
