    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab functionality
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Remove active class from all tabs and contents
                    tabs.forEach(t => t.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));
                    
                    // Add active class to clicked tab and corresponding content
                    this.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });
            
            // Rates refresh button
            const ratesRefresh = document.getElementById('ratesRefresh');
            ratesRefresh.addEventListener('click', function() {
                const icon = this.querySelector('i');
                icon.classList.add('fa-spin');
                
                setTimeout(() => {
                    icon.classList.remove('fa-spin');
                    // In a real app, this would fetch new rate data
                }, 1000);
            });
            
            // Price prediction form
            const predictionForm = document.getElementById('predictionForm');
            const predictionResult = document.getElementById('predictionResult');
            
            predictionForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Get form values
                const crop = document.getElementById('crop-select').value;
                const state = document.getElementById('state-select').value;
                const period = document.getElementById('prediction-period').value;
                const currentPrice = parseFloat(document.getElementById('current-price').value);
                
                // Simulate processing
                const submitBtn = this.querySelector('.predict-btn');
                const originalText = submitBtn.textContent;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Predicting...';
                submitBtn.disabled = true;
                
                setTimeout(() => {
                    // Update prediction result based on inputs
                    updatePredictionResult(crop, state, period, currentPrice);
                    
                    // Show result
                    predictionResult.style.display = 'block';
                    
                    // Reset button
                    submitBtn.textContent = originalText;
                    submitBtn.disabled = false;
                    
                    // Scroll to result
                    predictionResult.scrollIntoView({ behavior: 'smooth' });
                }, 2000);
            });
            
            // Update prediction result based on inputs
            function updatePredictionResult(crop, state, period, currentPrice) {
                // Calculate predicted price based on inputs
                let predictedPrice = currentPrice;
                let priceChange = 0;
                let confidence = 80;
                
                // Adjust based on crop
                if (crop === 'wheat') {
                    predictedPrice = currentPrice * 1.05; // 5% increase
                    priceChange = 5;
                    confidence = 85;
                } else if (crop === 'rice') {
                    predictedPrice = currentPrice * 0.97; // 3% decrease
                    priceChange = -3;
                    confidence = 82;
                } else if (crop === 'cotton') {
                    predictedPrice = currentPrice * 1.08; // 8% increase
                    priceChange = 8;
                    confidence = 78;
                } else if (crop === 'sugarcane') {
                    predictedPrice = currentPrice * 1.03; // 3% increase
                    priceChange = 3;
                    confidence = 80;
                } else if (crop === 'maize') {
                    predictedPrice = currentPrice * 1.04; // 4% increase
                    priceChange = 4;
                    confidence = 83;
                } else if (crop === 'mustard') {
                    predictedPrice = currentPrice * 1.06; // 6% increase
                    priceChange = 6;
                    confidence = 81;
                } else if (crop === 'gram') {
                    predictedPrice = currentPrice * 1.02; // 2% increase
                    priceChange = 2;
                    confidence = 84;
                } else if (crop === 'soybean') {
                    predictedPrice = currentPrice * 1.07; // 7% increase
                    priceChange = 7;
                    confidence = 79;
                }
                
                // Adjust based on period
                if (period === '1-week') {
                    predictedPrice = currentPrice + (predictedPrice - currentPrice) * 0.2; // 20% of total change
                    confidence -= 5;
                } else if (period === '2-weeks') {
                    predictedPrice = currentPrice + (predictedPrice - currentPrice) * 0.5; // 50% of total change
                    confidence -= 3;
                } else if (period === '3-months') {
                    predictedPrice = currentPrice + (predictedPrice - currentPrice) * 1.5; // 150% of total change
                    confidence -= 8;
                }
                
                // Update DOM elements
                document.getElementById('predictedCrop').textContent = crop.charAt(0).toUpperCase() + crop.slice(1);
                document.getElementById('predictedPrice').textContent = '₹' + Math.round(predictedPrice);
                document.getElementById('predictionConfidence').textContent = Math.max(70, confidence) + '%';
                
                const priceChangeElement = document.getElementById('priceChange');
                if (priceChange >= 0) {
                    priceChangeElement.textContent = '+' + priceChange.toFixed(2) + '%';
                    priceChangeElement.className = 'insight-value price-up';
                } else {
                    priceChangeElement.textContent = priceChange.toFixed(2) + '%';
                    priceChangeElement.className = 'insight-value price-down';
                }
            }
            
            // Search functionality
            const searchInput = document.querySelector('.search-input');
