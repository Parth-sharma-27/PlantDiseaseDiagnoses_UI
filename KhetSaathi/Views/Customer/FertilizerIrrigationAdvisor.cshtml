@{
    Layout = "_DashboardLayout";
}

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    
    <style>
        /* Global Styles */
        :root {
            --primary-color: #2E7D32;
            --secondary-color: #4CAF50;
            --accent-color: #FF9800;
            --light-color: #F8F9FA;
            --dark-color: #212529;
            --text-color: #495057;
            --white: #FFFFFF;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.4s ease;
            --gradient: linear-gradient(135deg, #2E7D32, #4CAF50);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            line-height: 1.7;
            color: var(--text-color);
            background-color: var(--light-color);
            overflow-x: hidden;
        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Header Styles */
        header {
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: var(--transition);
        }
        
        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }
        
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--primary-color);
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 24px;
        }
        
        .logo-container i {
            font-size: 28px;
            color: var(--accent-color);
        }
        
        .back-link {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .back-link:hover {
            color: var(--secondary-color);
        }
        
        /* Advisor Section */
        .advisor-section {
            padding: 120px 0 80px;
            background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://images.unsplash.com/photo-1605000797499-95a51c5269ae?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }
        
        .section-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 36px;
            color: var(--dark-color);
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }
        
        .section-header h2::after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: var(--gradient);
            bottom: -10px;
            left: 20%;
            border-radius: 2px;
        }
        
        .section-header h2 span {
            color: var(--primary-color);
        }
        
        .section-header p {
            font-size: 18px;
            max-width: 700px;
            margin: 25px auto 0;
            color: var(--text-color);
        }
        
        /* Tabs */
        .tabs-container {
            max-width: 900px;
            margin: 0 auto 40px;
        }
        
        .tabs {
            display: flex;
            border-bottom: 2px solid rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }
        
        .tab {
            padding: 15px 30px;
            font-weight: 600;
            color: var(--text-color);
            cursor: pointer;
            position: relative;
            transition: var(--transition);
            font-family: 'Montserrat', sans-serif;
        }
        
        .tab:hover {
            color: var(--primary-color);
        }
        
        .tab.active {
            color: var(--primary-color);
        }
        
        .tab.active::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 3px;
            background: var(--gradient);
            bottom: -2px;
            left: 0;
            border-radius: 2px;
        }
        
        .tab-content {
            display: none;
            animation: fadeIn 0.5s ease;
        }
        
        .tab-content.active {
            display: block;
        }
        
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Form Styles */
        .advisor-form {
            background: var(--white);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            max-width: 800px;
            margin: 0 auto 40px;
        }
        
        .form-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            color: var(--dark-color);
            margin-bottom: 25px;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-row {
            display: flex;
            gap: 20px;
        }
        
        .form-row .form-group {
            flex: 1;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 15px;
            border: 2px solid rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            transition: var(--transition);
            background: var(--light-color);
        }
        
        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: var(--primary-color);
            background: var(--white);
            box-shadow: 0 0 0 5px rgba(46, 125, 50, 0.1);
        }
        
        .calculate-btn {
            display: block;
            width: 100%;
            max-width: 300px;
            margin: 30px auto 0;
            padding: 15px;
            background: var(--gradient);
            color: var(--white);
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            font-family: 'Montserrat', sans-serif;
        }
        
        .calculate-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 125, 50, 0.4);
        }
        
        /* Results Container */
        .results-container {
            display: none;
        }
        
        .result-card {
            background: var(--white);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }
        
        .result-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .result-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            background: rgba(46, 125, 50, 0.1);
            color: var(--primary-color);
        }
        
        .result-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            color: var(--dark-color);
        }
        
        .recommendation-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        
        .recommendation-item {
            background: var(--light-color);
            border-radius: 15px;
            padding: 20px;
            transition: var(--transition);
        }
        
        .recommendation-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        }
        
        .recommendation-item h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            color: var(--dark-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .recommendation-item h4 i {
            color: var(--primary-color);
        }
        
        .recommendation-item p {
            color: var(--text-color);
            margin-bottom: 15px;
        }
        
        .recommendation-item .value {
            font-size: 20px;
            font-weight: 600;
            color: var(--primary-color);
        }
        
        .schedule-container {
            margin-top: 30px;
        }
        
        .schedule-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            color: var(--dark-color);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .schedule-title i {
            color: var(--primary-color);
        }
        
        .schedule-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--white);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .schedule-table th {
            background: var(--gradient);
            color: var(--white);
            text-align: left;
            padding: 15px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
        }
        
        .schedule-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .schedule-table tr:last-child td {
            border-bottom: none;
        }
        
        .schedule-table tr:nth-child(even) {
            background: rgba(0, 0, 0, 0.01);
        }
        
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .action-btn {
            padding: 12px 25px;
            background: var(--white);
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            border-radius: 50px;
            font-weight: 600;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        
        .action-btn:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 125, 50, 0.3);
        }
        
        .tips-container {
            background: rgba(255, 152, 0, 0.1);
            border-left: 5px solid var(--accent-color);
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
        }
        
        .tips-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            color: var(--dark-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .tips-title i {
            color: var(--accent-color);
        }
        
        .tips-list {
            list-style: none;
        }
        
        .tips-list li {
            margin-bottom: 10px;
            padding-left: 25px;
            position: relative;
        }
        
        .tips-list li::before {
            content: '\f00c';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            left: 0;
            top: 0;
            color: var(--accent-color);
        }
        
        /* Weather Widget */
        .weather-widget {
            background: var(--white);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }
        
        .weather-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .weather-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .weather-title i {
            color: var(--primary-color);
        }
        
        .weather-refresh {
            background: none;
            border: none;
            color: var(--primary-color);
            font-size: 16px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .weather-refresh:hover {
            transform: rotate(180deg);
        }
        
        .weather-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .weather-icon {
            font-size: 48px;
            color: var(--accent-color);
        }
        
        .weather-details {
            flex: 1;
        }
        
        .weather-temp {
            font-size: 24px;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 5px;
        }
        
        .weather-desc {
            color: var(--text-color);
            margin-bottom: 10px;
        }
        
        .weather-data {
            display: flex;
            gap: 15px;
            font-size: 14px;
            color: var(--text-color);
        }
        
        .weather-data-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        /* Footer */
        footer {
            background-color: var(--dark-color);
            color: var(--white);
            padding: 70px 0 20px;
            position: relative;
            overflow: hidden;
        }
        
        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 10% 90%, rgba(76, 175, 80, 0.2) 0%, transparent 60%);
            z-index: 1;
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 50px;
            position: relative;
            z-index: 2;
        }
        
        .footer-logo {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        
        .footer-logo .logo-container {
            margin-bottom: 20px;
            color: var(--white);
        }
        
        .footer-logo p {
            opacity: 0.8;
            line-height: 1.8;
            margin-bottom: 25px;
        }
        
        .footer-links h4 {
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 12px;
            color: var(--white);
        }
        
        .footer-links h4::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background: var(--gradient);
            bottom: 0;
            left: 0;
            border-radius: 2px;
        }
        
        .footer-links ul {
            list-style: none;
        }
        
        .footer-links li {
            margin-bottom: 12px;
        }
        
        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: var(--transition);
            display: inline-block;
            position: relative;
        }
        
        .footer-links a::before {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: var(--accent-color);
            bottom: -2px;
            left: 0;
            transition: var(--transition);
        }
        
        .footer-links a:hover {
            color: var(--white);
            padding-left: 5px;
        }
        
        .footer-links a:hover::before {
            width: 100%;
        }
        
        .footer-bottom {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 16px;
            opacity: 0.7;
            position: relative;
            z-index: 2;
        }
        
        /* Responsive Styles */
        @@media (max-width: 992px) {
            .recommendation-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }
        
        @@media (max-width: 768px) {
            .tabs {
                flex-wrap: wrap;
            }
            
            .tab {
                padding: 10px 15px;
                font-size: 14px;
            }
            
            .form-row {
                flex-direction: column;
                gap: 0;
            }
            
            .section-header h2 {
                font-size: 30px;
            }
            
            .advisor-form {
                padding: 20px;
            }
            
            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
        
        @@media (max-width: 576px) {
            .section-header h2 {
                font-size: 26px;
            }
            
            .advisor-form {
                padding: 20px;
            }
            
            .recommendation-grid {
                grid-template-columns: 1fr;
            }
            
            .schedule-table {
                font-size: 14px;
            }
            
            .schedule-table th,
            .schedule-table td {
                padding: 10px;
            }
            
            .weather-info {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>

