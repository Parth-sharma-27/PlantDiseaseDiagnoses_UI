    <!-- Fertilizer & Irrigation Advisor Section -->
    <section class="advisor-section pt-2">
        <div class="container">
            <div class="section-header">
                <h2>Fertilizer & <span>Irrigation Advisor</span></h2>
                <p>Get personalized fertilizer and irrigation recommendations based on your crop, soil type, and local conditions</p>
            </div>
            
            <div class="tabs-container">
                <div class="tabs">
                    <div class="tab active" data-tab="fertilizer-advisor">Fertilizer Advisor</div>
                    <div class="tab" data-tab="irrigation-advisor">Irrigation Advisor</div>
                </div>
                
                <!-- Weather Widget -->
                <div class="weather-widget">
                    <div class="weather-header">
                        <h3 class="weather-title">
                            <i class="fas fa-cloud-sun"></i> Current Weather
                        </h3>
                        <button class="weather-refresh" id="weatherRefresh">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                    
                    <div class="weather-info">
                        <div class="weather-icon">
                            <i class="fas fa-sun"></i>
                        </div>
                        <div class="weather-details">
                            <div class="weather-temp">32°C</div>
                            <div class="weather-desc">Sunny</div>
                            <div class="weather-data">
                                <div class="weather-data-item">
                                    <i class="fas fa-tint"></i> 45%
                                </div>
                                <div class="weather-data-item">
                                    <i class="fas fa-wind"></i> 12 km/h
                                </div>
                                <div class="weather-data-item">
                                    <i class="fas fa-eye"></i> 10 km
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Fertilizer Advisor Tab -->
                <div class="tab-content active" id="fertilizer-advisor">
                    <div class="advisor-form">
                        <h3 class="form-title">Fertilizer Recommendation</h3>
                        
                        <form id="fertilizerForm">
                            <div class="form-group">
                                <label for="crop">Crop Type</label>
                                <select id="crop" required>
                                    <option value="">Select Crop</option>
                                    <option value="wheat">Wheat</option>
                                    <option value="rice">Rice</option>
                                    <option value="cotton">Cotton</option>
                                    <option value="sugarcane">Sugarcane</option>
                                    <option value="maize">Maize</option>
                                    <option value="pulses">Pulses</option>
                                    <option value="vegetables">Vegetables</option>
                                    <option value="fruits">Fruits</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="soil">Soil Type</label>
                                <select id="soil" required>
                                    <option value="">Select Soil Type</option>
                                    <option value="sandy">Sandy</option>
                                    <option value="loamy">Loamy</option>
                                    <option value="clay">Clay</option>
                                    <option value="silty">Silty</option>
                                    <option value="peaty">Peaty</option>
                                    <option value="chalky">Chalky</option>
                                </select>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="area">Farm Area (in acres)</label>
                                    <input type="number" id="area" min="0.1" step="0.1" required>
                                </div>
                                <div class="form-group">
                                    <label for="growth">Growth Stage</label>
                                    <select id="growth" required>
                                        <option value="">Select Growth Stage</option>
                                        <option value="preparation">Land Preparation</option>
                                        <option value="sowing">Sowing</option>
                                        <option value="seedling">Seedling</option>
                                        <option value="vegetative">Vegetative</option>
                                        <option value="flowering">Flowering</option>
                                        <option value="fruiting">Fruiting</option>
                                        <option value="maturity">Maturity</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="previous">Previous Fertilizer Used (if any)</label>
                                <input type="text" id="previous" placeholder="e.g., Urea, DAP, NPK">
                            </div>
                            
                            <button type="submit" class="calculate-btn">Get Recommendation</button>
                        </form>
                    </div>
                    
                    <div class="results-container" id="fertilizerResults">
                        <div class="result-card">
                            <div class="result-header">
                                <div class="result-icon">
                                    <i class="fas fa-flask"></i>
                                </div>
                                <h3 class="result-title">Fertilizer Recommendation</h3>
                            </div>
                            
                            <div class="recommendation-grid">
                                <div class="recommendation-item">
                                    <h4><i class="fas fa-vial"></i> Primary Fertilizer</h4>
                                    <p>Recommended for your soil type and crop</p>
                                    <div class="value" id="primaryFertilizer">NPK 20:20:20</div>
                                </div>
                                
                                <div class="recommendation-item">
                                    <h4><i class="fas fa-weight"></i> Quantity Required</h4>
                                    <p>For your farm area</p>
                                    <div class="value" id="fertilizerQuantity">50 kg</div>
                                </div>
                                
                                <div class="recommendation-item">
                                    <h4><i class="fas fa-calendar-alt"></i> Application Time</h4>
                                    <p>Best time for application</p>
                                    <div class="value" id="applicationTime">Early Morning</div>
                                </div>
                                
                                <div class="recommendation-item">
                                    <h4><i class="fas fa-seedling"></i> Application Method</h4>
                                    <p>Recommended technique</p>
                                    <div class="value" id="applicationMethod">Broadcasting</div>
                                </div>
