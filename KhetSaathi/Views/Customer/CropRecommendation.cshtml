            // Generate crop recommendations based on inputs
            function generateRecommendations(soil, season, water, budget) {
                // Define suitability scores for each crop based on inputs
                const suitabilityScores = {};
                
                // Initialize scores
                Object.keys(cropData).forEach(crop => {
                    suitabilityScores[crop] = 70; // Base score
                });
                
                // Adjust scores based on soil type
                if (soil === 'loamy') {
                    suitabilityScores.wheat += 15;
                    suitabilityScores.maize += 15;
                    suitabilityScores.cotton += 10;
                } else if (soil === 'clay') {
                    suitabilityScores.rice += 15;
                    suitabilityScores.sugarcane += 10;
                } else if (soil === 'sandy') {
                    suitabilityScores.cotton += 10;
                    suitabilityScores.pulses += 10;
                } else if (soil === 'silty') {
                    suitabilityScores.wheat += 10;
                    suitabilityScores.rice += 10;
                    suitabilityScores.maize += 10;
                }
                
                // Adjust scores based on season
                if (season === 'kharif') {
                    suitabilityScores.rice += 20;
                    suitabilityScores.cotton += 15;
                    suitabilityScores.maize += 10;
                } else if (season === 'rabi') {
                    suitabilityScores.wheat += 20;
                    suitabilityScores.pulses += 15;
                } else if (season === 'zaid') {
                    suitabilityScores.maize += 15;
                    suitabilityScores.pulses += 10;
                } else if (season === 'year-round') {
                    suitabilityScores.sugarcane += 20;
                }
                
                // Adjust scores based on water availability
                if (water === 'high') {
                    suitabilityScores.rice += 20;
                    suitabilityScores.sugarcane += 15;
                } else if (water === 'medium') {
                    suitabilityScores.wheat += 10;
                    suitabilityScores.cotton += 10;
                    suitabilityScores.maize += 10;
                } else if (water === 'low') {
                    suitabilityScores.pulses += 20;
                    suitabilityScores.cotton += 5;
                }
                
                // Adjust scores based on budget
                if (budget === 'high') {
                    suitabilityScores.sugarcane += 15;
                    suitabilityScores.cotton += 15;
                } else if (budget === 'medium') {
                    suitabilityScores.wheat += 10;
                    suitabilityScores.rice += 10;
                    suitabilityScores.maize += 10;
                } else if (budget === 'low') {
                    suitabilityScores.pulses += 15;
                    suitabilityScores.maize += 10;
                }
                
                // Sort crops by suitability score
                const sortedCrops = Object.keys(suitabilityScores).sort((a, b) => {
                    return suitabilityScores[b] - suitabilityScores[a];
                });
                
                // Return top 4 crops
                return sortedCrops.slice(0, 4).map(crop => {
                    return {
                        ...cropData[crop],
                        match: Math.min(95, suitabilityScores[crop])
                    };
                });
            }
            
